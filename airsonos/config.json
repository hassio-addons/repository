{
  "name": "AirSonos",
  "version": "2.2.0",
  "slug": "airsonos",
  "description": "AirPlay capabilities for your Sonos (and UPnP) devices.",
  "url": "https://github.com/hassio-addons/addon-airsonos",
  "startup": "services",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "i386"
  ],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "map": [
    "config:rw"
  ],
  "options": {
    "address": "",
    "port": 49152,
    "latency_rtp": 1000,
    "latency_http": 2000,
    "drift": false
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
    "address": "str",
    "port": "port",
    "latency_rtp": "int",
    "latency_http": "int",
    "drift": "bool"
  },
  "image": "hassioaddons/airsonos-{arch}"
}